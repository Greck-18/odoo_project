<?xml version="1.0" encoding="utf-8"?>

<odoo>
        <record id="music_wizard_form" model="ir.ui.view">
            <field name="name">music.wizard.form</field>
            <field name="model">music.menu.wizard</field>
            <field name="arch" type="xml">
                <form string="Input xml file">
                    <group class="oe_title">
                        <field name="xml_file"/>
                    </group>
                    <footer>
                        <button string="Input file" type="object" name="download_file" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="music_wizard_action" model="ir.actions.act_window">
            <field name="name">music.wizard.action</field>
            <field name="res_model">music.menu.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="music_wizard_form"/>
            <field name="target">new</field>
        </record>


        <menuitem id="music_wizard_menu"
                  name="Upload xml"
                  parent="music_root"
                  action="music_wizard_action"
                  sequence="10"/>

</odoo>