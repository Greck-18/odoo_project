<?xml version="1.0" encoding="utf-8"?>

<odoo>
        <record id="music_album_view_tree" model="ir.ui.view">
            <field name="name">music.album.view</field>
            <field name="model">music.album</field>
            <field name="arch" type="xml">
                <tree string="Music Album">
                    <field name="name"/>
                </tree>
            </field>
        </record>



        <record id="action_music_album_list" model="ir.actions.act_window">
        <field name="name">Music Album</field>
        <field name="res_model">music.album</field>
        <field name="view_mode">tree</field>
        </record>

</odoo>