<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="single_form_view" model="ir.ui.view">
        <field name="name">single.form</field>
        <field name="model">single</field>
        <field name="arch" type="xml">
            <form string="Single">
                <sheet>
                    <group>
                        <group col="2">
                            <field name="name"/>
                            <field name="artist_id"/>
                            <field name="listeners"/>
                            <field name="duration" widget="float_time" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="members"/>
                            <field name="album_id"/>
                            <field name="group_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="single_tree_view" model="ir.ui.view">
        <field name="name">single.tree</field>
        <field name="model">single</field>
        <field name="arch" type="xml">
            <tree string="Single">
                <field name="name"/>
                <field name="listeners"/>
                <field name="duration" widget="float_time" class="oe_inline"/>
                <field name="members"/>
            </tree>
        </field>
    </record>


    <record id="single_kanban_view" model="ir.ui.view">
        <field name="name">single.view</field>
        <field name="model">single</field>
        <field name="arch" type="xml">
            <kanban class="o_single">
                <field name="name"/>
                <field name="artist_id"/>
                <field name="duration" widget="float_time" class="oe_inline"/>
                <field name="listeners"/>
                <field name="album_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <field name="artist_id" attrs="{'invisible':[('album_id','=',True)]}"/>
                                    </li>
                                    <li>
                                        <field name="listeners"/>
                                    </li>
                                    <li>
                                        <field name="duration" widget="float_time" class="oe_inline"/>
                                    </li>
                                    <li>
                                        <field name="album_id"/>
                                    </li>
                                    <li>
                                        <field name="group_id" attrs="{'invisible':[('artist_id','=',True)]}"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="single_form_search" model="ir.ui.view">
        <field name="name">single.search</field>
        <field name="model">single</field>
        <field name="arch" type="xml">
            <search string="Single">
                <field name="name"/>
                <field name="group_id"/>
                <field name="album_id"/>
                <field name="artist_id"/>
                <group expand="1" string="Group By">
                    <filter string="Album" name="album_ids" context="{'group_by':'album_id'}"/>
                    <filter string="Group" name="group_id" context="{'group_by':'group_id'}"/>
                    <filter string="Artist" name="artist_id" context="{'group_by':'artist_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="single_action" model="ir.actions.act_window">
        <field name="name">Single</field>
        <field name="res_model">single</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                You has no songs yet
            </p>
        </field>
    </record>


    <menuitem id="single_root"
              name="Songs"
              action="single_action"
              parent="music_root"
              sequence="10"/>
</odoo>