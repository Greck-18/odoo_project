<?xml version="1.0" encoding="utf-8"?>

<odoo>


    <record id="music_artist_tree_view" model="ir.ui.view">
        <field name="name">music.artist.tree</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <tree string="Music Artist">
                <button name="wizard" string="edit" type="object" class="oe_highlight"/>
                <field name="name"/>
                <field name="age"/>
                <field name="sex"/>
                <field name="country_id"/>
                <field name="month_listeners"/>
                <field name="single_listeners"/>
                <field name="avatar"/>
                <field name="single_ids"/>
                <field name="album_ids"/>
                <field name="group_id"/>
            </tree>
        </field>
    </record>

    <record id="music_artist_form_view" model="ir.ui.view">
        <field name="name">music.artist.form</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <form string="Music Artist">
                <sheet>
                    <group>
                        <group>
                            <div class="oe_title">
                                <h1>
                                    <field name="name" default_focus="1" placeholder="Name"/>
                                    <field name="avatar" widget="image" nolabel="1" class="oe_avatar oe_left"/>
                                </h1>
                            </div>

                        </group>
                        <group>
                            <field name="age"/>
                            <field name="sex"/>
                            <field name="country_id"/>
                            <field name="month_listeners"/>
                            <field name="single_listeners"/>
                            <field name="group_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Singles">
                            <field name="single_ids"/>
                        </page>
                        <page string="Albums">
                            <field name="album_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="music_artist_kanban_view" model="ir.ui.view">
        <field name="name">music.artist.view</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <kanban class="o_music_artist">
                <field name="id"/>
                <field name="name"/>
                <field name="sex"/>
                <field name="age"/>
                <field name="country_id"/>
                <field name="month_listeners"/>
                <field name="single_listeners"/>
                <field name="avatar" nolabel="1" widget="image" class="oe_right oe_avatar"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('music.artist', 'avatar',record.id.raw_value)"
                                     alt="Image"/>
                            </div>
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <b>Name:</b>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <b>Age:</b>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <b>Sex:</b>
                                        <field name="sex"/>
                                    </li>
                                    <li>
                                        <b>Country:</b>
                                        <field name="country_id"/>
                                    </li>
                                    <li>
                                        <b>Group:</b>
                                        <field name="group_id"/>
                                    </li>
                                    <li>
                                        <b>Month Listeners:</b>
                                        <field name="month_listeners"/>
                                    </li>
                                    <li>
                                        <b>Single Listeners:</b>
                                        <field name="single_listeners"/>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="music_artist_form_search" model="ir.ui.view">
        <field name="name">music.artist.search</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <search string="Music Artist">
                <field name="name"/>
                <field name="group_id"/>
                <field name="album_ids"/>
                <field name="single_ids"/>
                <field name="country_id"/>
                <group expand="1" string="Group By">
                    <filter string="Group" name="group_id" context="{'group_by':'group_id'}"/>
                    <filter string="Country" name="country_id" context="{'group_by':'country_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="music_artist_action" model="ir.actions.act_window">
        <field name="name">Music Artist</field>
        <field name="res_model">music.artist</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first artist!
            </p>
        </field>
    </record>


    <menuitem id="music_root"
              name="Music"
              sequence="10"/>

    <menuitem id="music_artist_root"
              name="Music Artist"
              parent="music_root"
              action="music_artist_action"
              sequence="10"/>

</odoo>


















