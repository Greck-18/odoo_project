    <record id="music_artist_action" model="ir.actions.act_window">
        <field name="name">MusicArtist</field>
        <field name="res_model">music.artist</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first artist!
            </p>
        </field>
    </record>


    <menuitem id="music_root"
              name="Music"
              sequence="10"/>

    <menuitem id="music_artist_root"
              name="Music Artist"
              parent="music_root"
              action="music_artist_action"
              sequence="10"/>

