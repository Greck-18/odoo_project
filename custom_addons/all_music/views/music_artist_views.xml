<?xml version="1.0" encoding="utf-8"?>

<odoo>


    <record id="music_artist_tree_view" model="ir.ui.view">
        <field name="name">music.artist.tree</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <tree string="Music Artist">
                <field name="name"/>
                <field name="age"/>
                <field name="country"/>
                <field name="month_listeners"/>
                <field name="avatar"/>
                <field name="song_ids"/>
                <field name="album_ids"/>
                <field name="group_id"/>
            </tree>
        </field>
    </record>

    <record id="music_artist_form_view" model="ir.ui.view">
        <field name="name">music.artist.form</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <form string="Music Artist">
                <header>
                    <button name="wizard_open" string="Load xml" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="country"/>
                        <field name="month_listeners"/>
                        <field name="avatar"/>
                    </group>
                    <notebook>
                        <page string="Songs">
                            <field name="song_ids" widget="one2many_tag"/>
                        </page>
                        <page string="Albums">
                            <field name="album_ids"/>
                        </page>
                        <page string="Group">
                            <field name="group_id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="music_artist_kanban_view" model="ir.ui.view">
        <field name="name">music.artist.view</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <kanban class="o_music_artist">
                <field name="name"/>
                <field name="age"/>
                <field name="country"/>
                <field name="month_listeners"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="name"/>
                                    </li>
                                    <li>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <field name="country"/>
                                    </li>
                                    <li>
                                        <field name="month_listeners"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="music_artist_action" model="ir.actions.act_window">
        <field name="name">Music Artist</field>
        <field name="res_model">music.artist</field>
        <field name="view_mode">form,kanban,tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first artist!
            </p>
        </field>
    </record>


    <menuitem id="music_root"
              name="Music"
              sequence="10"/>

    <menuitem id="music_artist_root"
              name="Music Artist"
              parent="music_root"
              action="music_artist_action"
              sequence="10"/>

</odoo>


















