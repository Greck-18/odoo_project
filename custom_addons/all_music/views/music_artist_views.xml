<odoo>

    <record id="music_artist_view_form" model="ir.ui.view">
        <field name="name">music.artist.form</field>
        <field name="model">music.artist</field>
        <field name="arch" type="xml">
            <form string="Music Artist">
                <sheet>
                    <field name="name"/>
                    <field name="song_ids"/>
<!--                    <group>-->
<!--                    <field name="avatar" widget="image" class="oe_avatar" nolabel="1"/>-->
<!--                    </group>-->
<!--                    <group class="oe_title">-->

<!--                        <h1>-->
<!--                            <field name="name" default_focus="1" placeholder="Name"/>-->
<!--                        </h1>-->
<!--                    </group>-->

                </sheet>
            </form>
